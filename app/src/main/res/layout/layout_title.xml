<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_title_height"
    android:background="@color/h_color_gray_bg">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/h_color_black_bg"
        android:textSize="@dimen/h_text_title"
        tools:text="我是标题" />

    <ImageView
        android:id="@+id/title_iv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/title_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_clear" />

</RelativeLayout>